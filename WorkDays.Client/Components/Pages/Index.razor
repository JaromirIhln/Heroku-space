      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/"><span class="fa fa-home"></span> Domů </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/home"><span class="fa fa-info-circle"></span> O aplikaci </a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Nabídka 
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" href="#">ÚKOLY</a> <span class="fa fa-tasks"></span></li>
            <li><a class="dropdown-item" href="#">POZNÁMKY</a> <span class="fa fa-sticky-note"></span></li>
            <li><hr class="dropdown-divider"></li>
